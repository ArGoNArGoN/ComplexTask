@if (!(Web.Areas.Identity.Pages.Account.LoginModel.MyUser is null))
{
    <a href="Identity/Account/Manage">Рады вас видеть, @Web.Areas.Identity.Pages.Account.LoginModel.MyUser.Email!</a>
    <form method="post" action="Identity/Account/LogOut">
        <button type="submit" class="nav-link btn btn-link">Выход</button>
    </form>
}
else
{

    <a class="nav-link text-dark" href="Identity/Account/Register">Регистрация</a>
    <a class="nav-link text-dark" href="Identity/Account/Login">Вход</a>
}